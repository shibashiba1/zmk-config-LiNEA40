        //4

        FUNCTION {
            bindings = <
&kp F1  &kp F2  &kp F3  &kp F4   &kp F5                     &trans      &kp LC(LG(LEFT))     &trans         &kp LC(LG(RIGHT))  &kp LC(LA(DELETE))
&kp F6  &kp F7  &kp F8  &kp F9   &kp F10                    &trans      &kp LA(PRINTSCREEN)  &kp PG_UP      &kp LG(LS(S))      &kp LC(LS(ESCAPE))
&trans  &trans  &trans  &kp F11  &kp F12                    &kp C_MUTE  &kp HOME             &kp PAGE_DOWN  &kp END            &kp LC(LA(INS))
