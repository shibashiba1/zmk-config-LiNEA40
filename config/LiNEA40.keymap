        };

        And_Win {
            bindings = <
&trans  &kp LC(LS(TAB))   &kp LG(TAB)    &kp LC(TAB)        &kp LC(U)                    &trans     &trans            &trans            &trans         &trans
&trans  &kp LC(LG(LEFT))  &kp LS(LC(A))  &kp LC(LG(RIGHT))  &kp SPACE                    &kp LC(I)  &kp LG(LC(LEFT))  &kp LG(H)         &kp LG(LC(A))  &kp LG(LC(UP))
&trans  &kp LA(LEFT)      &trans         &kp LA(RIGHT)      &trans                       &kp LC(O)  &trans            &kp LG(LC(DOWN))  &trans         &trans
&trans  &trans            &trans         &trans             &trans     &trans    &trans  &trans                       &trans            &trans         &trans
            >;
        };

        Pad_Base {
            bindings = <
&kp Q      &kp W         &kp E           &kp R   &kp T                                      &kp Y        &kp U  &kp I      &kp O      &kp P
&kp A      &kp S         &kp D           &kp F   &kp G                                      &kp H        &kp J  &kp K      &kp L      &kp RSHIFT
&kp Z      &kp X         &kp C           &kp V   &kp B                                      &kp N        &kp M  &kp COMMA  &kp DOT    &kp SLASH
&kp LCTRL  &kp LEFT_ALT  &mt LGUI LANG2  &trans  &lt 8 LANG1  &lt 7 SPACE    &kp BACKSPACE  &lt 9 ENTER         &kp MINUS  &kp UNDER  &kp ESC
            >;

            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        Pad_Win {
            bindings = <
&trans  &kp LC(LS(TAB))  &kp LC(UP)     &kp LC(TAB)    &kp LC(J)                            &kp LC(LA(D))  &kp LC(LA(E))     &kp LC(LA(F))  &kp LC(LA(T))      &kp LC(LA(G))
&trans  &kp LC(LEFT)     &kp LS(LG(T))  &kp LC(RIGHT)  &kp SPACE                            &kp LC(K)      &kp LC(LA(LEFT))  &kp F11        &kp LC(LA(RIGHT))  &kp LC(LA(ENTER))
