        //1

        MAC_WIN {
            bindings = <
&kp LC(LS(TAB))  &kp LC(LS(TAB))  &kp LC(UP)        &kp SPACE      &kp LC(J)                            &kp LC(D)     &kp LC(LA(E))     &kp LA(F)  &kp LC(LA(T))      &kp LC(LA(G))
&kp LC(LEFT)     &trans           &kp LS(LG(T))     &kp LC(RIGHT)  &trans                               &kp LC(K)     &kp LC(LA(LEFT))  &kp F11    &kp LC(LA(RIGHT))  &kp LA(ENTER)
&trans           &kp LG(LEFT)     &kp LC(LS(DOWN))  &kp LG(RIGHT)  &kp LC(LG(SPACE))                    &kp LC(SEMI)  &trans            &kp F19    &trans             &trans
&trans           &trans           &trans            &trans         &trans             &trans    &trans  &trans                          &trans     &trans             &trans
            >;
        };

        //2

        MARK {
            bindings = <
&kp EXCLAMATION  &kp AT  &kp HASH  &kp DOLLAR  &kp PERCENT                    &kp CARET      &kp AMPERSAND  &kp ASTERISK   &kp LEFT_PARENTHESIS  &kp LS(INTERNATIONAL_3)
&trans           &trans  &trans    &trans      &trans                         &kp PG_UP      &kp LS(LBKT)   &kp UP_ARROW   &kp LEFT_BRACKET      &kp EQUAL
&trans           &trans  &trans    &trans      &trans                         &kp PAGE_DOWN  &kp LEFT       &kp DOWN       &kp RIGHT             &kp LS(INT1)
&trans           &trans  &trans    &trans      &trans       &trans    &trans  &trans                        &kp SEMICOLON  &kp SQT               &kp LS(QUESTION)
            >;

