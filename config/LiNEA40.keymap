            >;
        };

        SymNum {
            bindings = <
&kp LS(SEMI)  &kp LS(APOS)  &kp LS(GRAVE)  &kp LS(N1)  &kp LS(FSLH)                     &kp SLASH  &kp N7  &kp N8     &kp N9     &kp MINUS
&kp BSLH      &kp LS(N7)    &kp LS(N3)     &kp LBKT    &kp RBKT                         &kp ASTRK  &kp N4  &kp N5     &kp N6     &kp LS(EQUAL)
&kp LS(N4)    &kp LS(N2)    &kp LS(N5)     &kp LS(N9)  &kp LS(N0)                       &kp N0     &kp N1  &kp N2     &kp N3     &kp COMMA
&mkp MB5      &trans        &trans         &trans      &trans        &trans    &kp DEL  &trans             &kp MINUS  &kp UNDER  &kp EQUAL
            >;
        };

        Func {
            bindings = <
&kp HOME    &trans          &trans          &trans           &trans                        &bootloader  &trans    &trans    &trans     &kp PRINTSCREEN
&kp LSHIFT  &trans          &msc SCRL_UP    &trans           &trans                        &trans       &mkp MB1  &kp UP    &mkp MB2   &trans
&trans      &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_RIGHT  &kp K_MUTE                    &trans       &kp LEFT  &kp DOWN  &kp RIGHT  &trans
&kp END     &trans          &trans          &trans           &trans      &trans    &trans  &trans                 &trans    &trans     &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        Adjust {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans  &trans  &trans  &trans  &trans
&bt_mac       &bt_win       &bt_and       &bt_pad       &trans                          &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans        &trans                          &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans        &trans        &trans    &trans  &trans          &trans  &trans  &trans
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        Adjust {
            if-layers = <8 9>;
            then-layer = <10>;
        };
    };
};
